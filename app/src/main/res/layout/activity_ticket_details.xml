<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.TicketDetailsActivity">

    <include
        android:id="@+id/activity_ticket_details_toolbar"
        layout="@layout/custom_app_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="@dimen/default_dimen_0dp"
        android:layout_height="@dimen/default_dimen_0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_ticket_details_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_details_id_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/default_dimen_50dp"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_ticket_details_id_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_id_label"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="450"/>

            <TextView
                android:id="@+id/activity_ticket_details_title_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_details_title_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/default_dimen_30dp"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_id_value"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_ticket_details_title_value"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_title_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Computador com problema"/>

            <TextView
                android:id="@+id/activity_ticket_details_description_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_details_description_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/default_dimen_30dp"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_title_value"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_ticket_details_description_value"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_description_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Computador parou de funcionar de uma hora para outra"/>

            <TextView
                android:id="@+id/activity_ticket_details_opening_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_details_opening_date_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/default_dimen_30dp"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_description_value"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/activity_ticket_details_opening_date_value"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_opening_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="15/04/2020 10:50"/>

            <TextView
                android:id="@+id/activity_ticket_details_update_date_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ticket_details_update_date_label"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/default_dimen_30dp"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_opening_date_value"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/activity_ticket_details_update_date_value"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_update_date_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="16/04/2020 12:50"/>

            <TextView
                android:id="@+id/activity_ticket_details_status_label"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                android:layout_marginTop="@dimen/default_dimen_60dp"
                android:textStyle="bold"
                android:text="@string/ticket_details_status_label"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_update_date_value"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ProgressBar
                android:id="@+id/activity_ticket_details_progress_bar_status"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="@dimen/default_dimen_5dp"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:max="100"
                android:progressDrawable="@drawable/custom_progress_bar"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                android:layout_marginTop="@dimen/default_dimen_10dp"
                app:layout_constraintTop_toBottomOf="@+id/activity_ticket_details_status_label"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/activity_ticket_details_status_value"
                android:layout_width="@dimen/default_dimen_0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/default_dimen_20dp"
                android:layout_marginEnd="@dimen/default_dimen_20dp"
                android:layout_marginBottom="@dimen/default_dimen_50dp"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toBottomOf="@id/activity_ticket_details_progress_bar_status"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="novo"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>